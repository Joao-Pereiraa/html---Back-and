{% extends "layout.njk" %}

{% block head %}

<title>courses - Desafio 2-2: HTML</title>

<link href="https://fonts.googleapis.com/icon?family=Material+Icons"
rel="stylesheet">

{% endblock %}

{% block content %}


       <div class="titulo">
       <a>cursos</a>
     </div>

   <section class="cards">

       {% for item in items %}

       <div class = "card" id="{{item.id}}"> 
       <div class="card-img-cont {{'featured-wrapper' if item.featured}}">
         <img src= "https://img.youtube.com/vi/{{item.id}}/maxresdefault.jpg"  alt="Imagem de {{item.title}}">

          {% if item.featured %}
          <div class="featured">featured</div>
          {% endif %}

       </div>
       <div class="card-cont">
        <p> {{item.title}}</p>
      </div>

       <div class="card-info">
        <p>{{item.duration}}</p>
        <p class="card-price">{{item.price}}</p>
        </div>
       </div>

       {% endfor %}
    
    </section>

    <script src="/scripts.js "></script>
      
  {% endblock %}
